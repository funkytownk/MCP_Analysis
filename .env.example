# Gold IRA MCP Analysis Server Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HTTP_TRANSPORT=false

# Security Settings  
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ANALYSIS_REQUESTS_PER_MINUTE=5
SESSION_TIMEOUT_MINUTES=30
MAX_ANALYSES_PER_SESSION=10

# Validation Settings
MAX_TRANSCRIPT_LENGTH=100000
MAX_FILENAME_LENGTH=255
ALLOWED_FILE_EXTENSIONS=.txt,.pdf,.docx

# Performance Monitoring
ENABLE_MONITORING=false
LOG_PERFORMANCE_METRICS=true

# Analysis Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
ENABLE_DETAILED_ANALYSIS=true
GENERATE_ACTION_ITEMS=true
INCLUDE_RISK_ASSESSMENT=true

# Security Headers
ENABLE_HELMET=true
ENABLE_CSP=true
HSTS_MAX_AGE=31536000

# Logging
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true
LOG_ANALYSIS_ATTEMPTS=true

# Claude/OpenAI Configuration (if needed for future LLM integration)
# OPENAI_API_KEY=your_openai_api_key_here
# CLAUDE_API_KEY=your_claude_api_key_here
# MODEL_NAME=gpt-4
# MAX_TOKENS=4000

# Development Settings
DEBUG_MODE=false
ENABLE_MOCK_RESPONSES=false
VERBOSE_LOGGING=false