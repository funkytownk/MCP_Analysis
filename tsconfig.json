{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/http-server.ts",
    "src/mcp-http-server.ts",
    "src/debug-server.ts",
    "src/minimal-server.ts",
    "src/smithery-server.ts",
    "src/mcp-over-http-server.ts",
    "src/smithery-cli-server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server.ts",
    "src/middleware",
    "src/tools", 
    "src/utils",
    "src/smithery-server.ts"
  ]
}